<UserControl x:Class="WpfApp6.all_flags"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp6"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

	<Grid Background="LightGray">
		<!-- Set your desired background color here -->
		<ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,75" >
			<StackPanel x:Name="mainContainer" Orientation="Vertical">
				<!-- Your flags and countries will be added dynamically here -->
			</StackPanel>
		</ScrollViewer>
		<Button Content="return to user page " Click="return_to_user_page_Click" VerticalAlignment="Bottom" Height="40"/>
	</Grid>
</UserControl>
